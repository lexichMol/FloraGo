<TextView
    android:id="@+id/textView11"
    android:layout_width="416dp"
    android:layout_height="60dp"
    android:gravity="center"
    android:text="Советы дня"
    android:textAlignment="center"
    android:textSize="24dp"
    android:textStyle="bold"
    app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
    app:layout_constraintVertical_bias="0.333" />

<TextView
    android:id="@+id/textView12"
    android:layout_width="416dp"
    android:layout_height="60dp"
    android:gravity="center"
    android:text="Добавьте новое растение прямо сейчас"
    android:textAlignment="center"
    android:textSize="20dp"
    android:textStyle="bold"
    app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.4"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
    app:layout_constraintVertical_bias="1.0" />


<LinearLayout
    android:id="@+id/linearLayout4"
    android:layout_width="427dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="350dp"
    android:orientation="horizontal"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/linearLayout">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/img_7" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Гибискус"
            android:textAlignment="center"
            android:textSize="20dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/img_6" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Антуриум"
            android:textAlignment="center"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/imageButton8"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/img_5" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Замиокул"
            android:textAlignment="center"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>

<LinearLayout
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="horizontal"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="205dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:orientation="vertical"
            android:text="Добрый день!"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="vertical"
            android:text="Самое время проверить ваши цветочки"
            android:textAlignment="center"
            android:textSize="16dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="180dp"
            android:layout_height="58dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:onClick="menu_my_plants"
            android:text="Добавить растение"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="205dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/img_new" />
    </LinearLayout>
</LinearLayout>

<LinearLayout
    android:background="@color/grey"
    android:gravity="center"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_height="55dp"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    tools:ignore="MissingConstraints">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_height="match_parent"
        android:layout_marginRight="40dp"
        android:layout_width="80dp"
        android:orientation="vertical">

        <ImageView
            android:background="@color/grey"
            android:id="@+id/imageButton"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="80dp"
            android:src="@drawable/baseline_home_24" />

        <TextView
            android:id="@+id/textView"
            android:layout_height="20dp"
            android:layout_marginEnd="5dp"
            android:layout_width="80dp"
            android:text="Главная"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_height="match_parent"
        android:layout_width="80dp"
        android:onClick="menu_my_plants"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <ImageView
            android:alpha="0.6"
            android:background="@color/grey"
            android:id="@+id/imageButton2"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="70dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/flower_pot_svgrepo_com" />

        <TextView
            android:id="@+id/textView2"
            android:layout_height="20dp"
            android:layout_width="80dp"
            android:text="Растения"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_width="80dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="menu_user"
        android:orientation="vertical">

        <ImageView
            android:alpha="0.6"
            android:background="@color/grey"
            android:id="@+id/imageButton3"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="70dp"
            android:scaleType="fitCenter"
            android:src="@drawable/baseline_person_24" />

        <TextView
            android:id="@+id/textView3"
            android:layout_height="20dp"
            android:layout_width="80dp"
            android:text="Профиль"
            android:textAlignment="center" />
    </LinearLayout>
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>